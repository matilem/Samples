@model AdminTool.ViewModels.HydraUserViewModel

@{
    ViewBag.Title = "Hydra User Control";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron-subhead">
    <h2>Create or Update Hydra User</h2>
</div>
<div>
    <p><h5>Instructions: Use the box to enter the username of the individual that you need to add or update.</h5></p>
    <p id="errorAlertBox" class="alert alert-danger" style="display: none;">
        <strong class="text" id="errorMessageParagraph"></strong>
    </p>
</div>

<div class="clearfix"></div>

<form>
    <div class="form-group">
        <label for="userNameLabel">User Name</label>
        @if (Model.UserName != null)
        {
            <input type="text" class="form-control" id="userName" placeholder="Jane.Doe" autofocus="autofocus" value="@Model.UserName" disabled>
        }
        else
        {
            <input type="text" class="form-control" id="userName" placeholder="Jane.Doe" autofocus="autofocus">
        }
    </div>

    <button type="submit" id="validateButton" class="btn btn-primary">Validate</button>
    <span id="validatingSpan" style="display: none"><i class="fas fa-spinner fa-spin"></i> Validating</span>

    <div id="userType" style="display: none">
        <hr />
        <p><h5>Instructions:  Select user type and permissions.</h5></p>

        <br />

        <h4><strong>User Type:</strong></h4>
        <div>
            <label class="radio-inline">
                <input type="radio" name="userChangeType" id="newUser" value="new" /> New User
            </label>
            <label class="radio-inline">
                <input type="radio" name="userChangeType" id="existingUser" value="update" /> Update Existing User
            </label>
        </div>
        <br />
        <h4><strong>User Permissions:</strong></h4>
        <div id="userPermissions">
            @*@if (Model.Permissions != null)
                {
                    @foreach (var permission in Model.Permissions)
                    {

                    }
                }
                else
                {*@
            <div>
                <label>DCP</label>

                <div class="span12 pagination-centered">
                    <div class="checkbox">
                        <label><input type="checkbox" value="">Control Specialist</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value="">Lead</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value="">Manager</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value=""> Processing Specialist</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value=""> Processing Specialist II</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value=""> QAQC</label>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value=""> Scanning</label>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
        <span id="processingSpan" style="display: none"><i class="fa fa-spin fa-spinner"></i> Processing</span>
    </div>
</form>
<script src="@Url.Content("~/Scripts/AppScripts/hydraUser.js")" type="text/javascript"></script>